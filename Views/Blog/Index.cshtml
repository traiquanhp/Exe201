@model IEnumerable<SmartCookFinal.Models.Blog>

<style>
    .blog-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .blog-card {
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
        background-color: #fff;
    }

        .blog-card:hover {
            transform: scale(1.01);
        }

    .blog-title {
        font-size: 30px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .blog-image {
        max-width: 100%;
        width:900px;
        height: auto;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .blog-content {
        color: #555;
        margin-bottom: 15px;
        font-size: 22px;
    }

    .blog-actions a {
        margin-right: 10px;
        text-decoration: none;
        font-weight: 500;
        color: #007bff;
    }

        .blog-actions a:hover {
            text-decoration: underline;
        }

    .btn-primary {
        margin-top: 10px;
        margin-bottom: 30px;
    }
</style>

<h2>Blog List</h2>
<a asp-action="Create" class="btn btn-primary">Create New Blog</a>

<div class="blog-container">
    @foreach (var item in Model)
    {
        <div class="blog-card">
            <div class="blog-title">@item.Title</div>

            @if (!string.IsNullOrEmpty(item.UrlImage))
            {
                <img src="@item.UrlImage" alt="Image" class="blog-image" />
            }

            <div class="blog-content">@item.Content</div>

            <div class="blog-actions">
                <a asp-action="Details" asp-route-id="@item.BlogId">View</a> |
                <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
            </div>
        </div>
    }
</div>
